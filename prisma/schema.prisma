generator client {
    provider = "prisma-client-js"
    output = "./generated"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
}

model Project {
    id                  Int  @default(autoincrement()) @id
    title               String
    description         String?
    imageUrl            String?
    tags                Tag[]
    links               Link[]
    createdAt           DateTime @default(now()) @map(name: "created_at")
}

model Post {
    id              Int  @default(autoincrement()) @id
    title           String
    body            String
    createdAt       DateTime @default(now()) @map(name: "created_at")
    tags            Tag[]
}

model Tag {
    id          Int  @default(autoincrement()) @id
    text        String
    projects    Project[]
    posts       Post[]
}

model Link {
    id              Int  @default(autoincrement()) @id
    href            String
    friendlyName    String?
    projects        Project[]
}