generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  shortDesc String
  imageUrl  String?
  tags      Tag[]
  links     Link[]
  createdAt DateTime @default(now()) @map(name: "created_at")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now()) @map(name: "created_at")
  tags      Tag[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  text     String
  projects Project[]
  posts    Post[]
}

model Link {
  id           Int       @id @default(autoincrement())
  href         String
  friendlyName String?
  projects     Project[]
}
